<div class="container trip-description-card col-md-6 col-md-offset-3">
  <div class="row">
    <div class="col-xs-12 col-md-9">
        <h1><%= @horntrip.title %></h1>
        <hr>
        <p>Propos√© par : <%= @horntrip.user.email %></p>
        <hr>
        <div class="trip-description only-small-screen text-center">
          <%= image_tag "https://a0.muscache.com/im/pictures/f8b51a41-900b-4312-9ea0-d141133a116d.jpg?aki_policy=xl_poster" %>
          <p>Price: <%= @horntrip.price %> euros</p>
          <button type="button" class="btn btn-danger">Book your trip</button>
        </div>
        <hr>
        <p>Au programme : <%= @horntrip.description %></p>
        <br>
        <!-- Map -->
        <div id="map" style="width: 100%; height: 400px;"></div>
        <br>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="trip-description affix only-large-screen">
        <%= image_tag "https://a0.muscache.com/im/pictures/f8b51a41-900b-4312-9ea0-d141133a116d.jpg?aki_policy=xl_poster" %>
        <p>Price: <%= @horntrip.price %> euros</p>
        <button type="button" class="btn btn-danger">Book your trip</button>
      </div>
    </div>
  </div>
</div>
