<div class="container">
  <div class="row">
    <div class="form col-xs-12 col-md-6 col-md-offset-3">
      <h2 class="text-center">Check before validation</h2>
      <%= simple_form_for(@booking) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :user_id %>
          <%= f.input :horntrip_id %>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Book", class:"btn btn-primary large_bottom_margin"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
